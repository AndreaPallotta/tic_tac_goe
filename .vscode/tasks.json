{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: cl.exe build active file",
      "command": "cl.exe",
      "args": [
        "/Zi",
        "/EHsc",
        "/nologo",
        "/I${workspaceFolder}\\tic_tac_coe\\include",
        "/Fe${workspaceFolder}\\tic_tac_coe\\bin\\${fileBasenameNoExtension}.exe",
        "${workspaceFolder}\\tic_tac_coe\\src\\*.cpp"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$msCompile"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    },
    {
      "label": "Kotlin: build active file",
      "type": "shell",
      "command": "bash",
      "args": [
        "${workspaceFolder}\\tic_tac_kt\\build.sh"
      ],
      // "command": "kotlinc.exe",
      // "args": [
      //   "${workspaceFolder}\\tic_tac_kt\\main.kt",
      //   "-include-runtime",
      //   "-d",
      //   "${workspaceFolder}\\tic_tac_kt\\tic_tac_kt.jar"
      // ],
      "options": {
          "cwd": "${fileDirname}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new",
      }
    }
  ],
  "version": "2.0.0"
}
